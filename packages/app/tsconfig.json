{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "react", "react-dom"],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@catalogue/app/*": ["src/app/*"],
      "@catalogue/pages/*": ["src/pages/*"],
      "@catalogue/widgets/*": ["src/widgets/*"],
      "@catalogue/features/*": ["src/features/*"],
      "@catalogue/entities/*": ["src/entities/*"],
      "@catalogue/shared/*": ["src/shared/*"],
      "@catalogue/config": ["catalog.config.ts"],
      "@catalogue/plugin-api": ["../../packages/plugin-api/src"],
      "@catalogue/core": ["../../packages/core/src"],
      "@catalogue/renderer-react": ["../../packages/renderer-react/src"],
      "@catalogue/indexer-vite": ["../../packages/indexer-vite/src"],
      "@catalogue/indexer-generated": ["../../packages/indexer-generated/src"]
    }
  },
  "include": ["src"]
}
